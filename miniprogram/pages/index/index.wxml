<!--index.wxml-->
<view class="container">
  <view wx:for="{{list}}" wx:key="" class='list' wx:for-item="i">
    <van-panel title="{{i.title}}" desc="{{i.date}}" status="状态" use-footer-slot>
      <view>{{i.content}}</view>
      <view slot="footer">
        <van-button size="small">按钮</van-button>
        <van-button size="small" type="danger">按钮</van-button>
      </view>
    </van-panel>
  </view>
  <button onTab="createResume" type='primary'>新建简历</button>
  <view class='footBox'></view>
  <view hidden="{{showQrcode}}" class='showQrcode' bindtap='showQrcode'>
    <image src='http://weixin.daxzn.com/public/code/10001.jpg' mode='widthFix'></image>
  </view>
</view>