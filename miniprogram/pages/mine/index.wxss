/* miniprogram/pages/mine/index.wxss */

.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  border-radius: 50%;
}

.right {
  width: 50rpx;
}

.nickName {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.nickName>text:nth-of-type(1) {
  font-size: 30rpx;
}

.nickName>text:nth-of-type(2) {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #89898a;
}

.loginBtn{
  background: #011935;
  color:#fff;
  border-radius: 0;
  margin-top: 30rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.itemBtn{
  margin-top: 10rpx;
}